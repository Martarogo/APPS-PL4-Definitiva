@{
    ViewBag.Title = Resource.Titulo;
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

@helper selected(string c, string culture)
{
    if (c == culture)
    {
        @:checked="checked"
    }
}

<div class="jumbotron">
    <h1>@Resource.Titulo</h1>
    <p class="lead">@Resource.StringAmigo</p>
    <p><a href="http://localhost:54321/Amigo/" class="btn btn-primary btn-large">@Resource.Acceso <b>@Resource.Titulo</b> &raquo;</a></p>
</div>

@using (Html.BeginForm("SetCulture", "Home"))
{
    <fieldset>
        <div class="btn-group dropup">
            <button type="button" class="btn btn-default">@Resource.Lang </button>
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Desplegar menú</span>
            </button>
            <ul class="dropdown-menu">
                <li><input name="culture" id="es" value="Español" type="submit" @selected("es", culture) /></li>
                <li><input name="culture" id="en" value="English" type="submit" @selected("en", culture) /></li>
            </ul>
        </div>
</fieldset>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        (function ($) {
            $("input[type = 'radio']").click(function () {
                $(this).parents("form").submit(); // post form
            });

        })(jQuery);
    </script>
}